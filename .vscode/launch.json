{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Local API", // launch the API on your workstation with an attached local debugger
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}api${pathSeparator}main.py",
            "env": {
                "REDIS_PORT": "16379",
                "POSTGRES_PORT": "15432",

                "API_PORT": "3000",
                "API_DELAY_MIN": "500",
                "API_DELAY_MAX": "1_000",
            },
            "envFile": "${workspaceFolder}${pathSeparator}.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "autoReload": {
                "enable": true,
                "exclude": [
                    "**/.git/**",
                    "**/__pycache__/**",
                    "**/node_modules/**",
                    "**/.metadata/**",
                    "**/site-packages/**",
                    "**/.venv/**"
                ],
                "include": [
                    "**/*.py",
                    "**/*.pyw"
                ]
            }
        },
        {
            "name": "Debug: Local Worker",  // launch the worker on your workstation with an attached local debugger
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}worker${pathSeparator}main.py",
            "env": {
                "REDIS_PORT": "16379",
                "POSTGRES_PORT": "15432",

                "WORKER_PORT": "3001",
                "WORKER_DELAY_MIN": "500",
                "WORKER_DELAY_MAX": "1_000",
                "WORKER_THREADS": "1",
            },
            "envFile": "${workspaceFolder}${pathSeparator}.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "autoReload": {
                "enable": true,
                "exclude": [
                    "**/.git/**",
                    "**/__pycache__/**",
                    "**/node_modules/**",
                    "**/.metadata/**",
                    "**/site-packages/**",
                    "**/.venv/**"
                ],
                "include": [
                    "**/*.py",
                    "**/*.pyw"
                ]
            }
        },
        {
            "name": "Attach: Docker API",  // attach to an existing API container running via: make debug
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 4000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true,
        },
        {
            "name": "Attach: Docker Worker",  // attach to an existing worker container running via: make debug
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 4001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Debug: Loader (file)",  // attach to an existing worker container running via: make debug
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/locust",
            "args": [
                "--headless",
                "--users=1",
                "--host=http://localhost:8000",
                "-f",
                "${file}"
            ],
            "gevent": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "autoReload": {
                "enable": false
            }
        },
    ]
}