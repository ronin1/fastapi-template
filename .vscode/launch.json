    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}api${pathSeparator}main.py",
            "env": {
                "REDIS_PORT": "16379",
                "POSTGRES_PORT": "15432",

                "API_PORT": "3000",
                "API_DELAY_MIN": "500",
                "API_DELAY_MAX": "1_000",
            },
            "envFile": "${workspaceFolder}${pathSeparator}.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}worker${pathSeparator}main.py",
            "env": {
                "REDIS_PORT": "16379",
                "POSTGRES_PORT": "15432",

                "WORKER_PORT": "3001",
                "WORKER_DELAY_MIN": "500",
                "WORKER_DELAY_MAX": "1_000",
            },
            "envFile": "${workspaceFolder}${pathSeparator}.env",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}