{
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": ["--line-length", "120"],
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E402,F841,F401,E302,E305",
    ],
    "pylint.args": [
        "--max-line-length=120",
        "--disable=C0114,C0115,C0116,E0402,E0401"
    ],
    "mypy-type-checker.args": [
        "--ignore-missing-imports"
    ],
  }